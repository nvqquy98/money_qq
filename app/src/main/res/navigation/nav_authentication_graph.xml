<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_authen"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.nvqquy98.moneyqq.presentation.ui.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/transform_end_in"
            app:exitAnim="@anim/transform_start_out"
            app:popEnterAnim="@anim/transform_start_in"
            app:popExitAnim="@anim/transform_end_out" />
        <action
            android:id="@+id/action_loginFragment_to_sendEmailFragment"
            app:destination="@id/sendEmailFragment"
            app:enterAnim="@anim/transform_end_in"
            app:exitAnim="@anim/transform_start_out"
            app:popEnterAnim="@anim/transform_start_in"
            app:popExitAnim="@anim/transform_end_out" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.nvqquy98.moneyqq.presentation.ui.register.RegisterFragment"
        android:label="RegisterFragment" />

    <fragment
        android:id="@+id/sendEmailFragment"
        android:name="com.nvqquy98.moneyqq.presentation.ui.sendemail.SendEmailFragment"
        android:label="SendEmailFragment">
        <action
            android:id="@+id/action_sendEmailFragment_to_sendSuccessFragment"
            app:destination="@id/sendSuccessFragment"
            app:enterAnim="@anim/transform_end_in"
            app:exitAnim="@anim/transform_start_out"
            app:popEnterAnim="@anim/transform_start_in"
            app:popExitAnim="@anim/transform_end_out" />
    </fragment>

    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.nvqquy98.moneyqq.presentation.ui.resetpassword.ResetPasswordFragment"
        android:label="ResetPasswordFragment" />

    <fragment
        android:id="@+id/sendSuccessFragment"
        android:name="com.nvqquy98.moneyqq.presentation.ui.sendsuccess.SendSuccessFragment"
        android:label="SendSuccessFragment">
        <action
            android:id="@+id/action_sendSuccessFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/transform_end_in"
            app:exitAnim="@anim/transform_start_out"
            app:popEnterAnim="@anim/transform_start_in"
            app:popExitAnim="@anim/transform_end_out"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
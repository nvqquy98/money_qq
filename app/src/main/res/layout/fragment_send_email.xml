<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.nvqquy98.moneyqq.presentation.ui.customview.layout.FormEntryApp
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_100"
            android:paddingHorizontal="@dimen/dp_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                style="@style/TextViewBold20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_email"
                android:textColor="@color/dodger_blue_approx"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.26" />

            <com.nvqquy98.moneyqq.presentation.ui.customview.edittext.EdtCommonView
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_26"
                android:hint="@string/email"
                android:textColor="@color/mine_shaft"
                android:textColorHint="@color/french_gray_approx"
                app:ecv_focused_color="@color/dodger_blue_approx"
                app:ecv_ic_start="@drawable/ic_email"
                app:ecv_type_text="email"
                app:ecv_unfocused_color="@color/french_gray_approx"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewMedium12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/please_enter_your_email_to_recover_your_password"
                android:textColor="@color/mine_shaft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edt_email" />

        </com.nvqquy98.moneyqq.presentation.ui.customview.layout.FormEntryApp>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_send_email"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_marginBottom="@dimen/dp_80"
            android:background="@null"
            android:src="@drawable/ic_btn_arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_description"
            style="@style/TextViewMedium14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/you_have_account"
            android:textColor="@color/boulder_solid"
            app:layout_constraintEnd_toStartOf="@id/tv_login"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_send_email" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_login"
            style="@style/TextViewBold14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/login"
            android:textColor="@color/mine_shaft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/tv_description"
            app:layout_constraintTop_toBottomOf="@id/btn_send_email" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

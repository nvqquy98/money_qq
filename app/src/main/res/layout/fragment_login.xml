<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--    #E4E4E4-->
    <!--    android:background="#F7F8FA"-->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/viewRotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F8FA"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_100">

            <com.nvqquy98.moneyqq.presentation.ui.customview.layout.FormEntryAppV3
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_478"
                app:arrow="bottom"
                app:arrowSize="@dimen/dp_36"
                app:backgroundFill="@color/white"
                app:blurShadow="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shadowColor="#0D000000"
                app:topEndRadius="@dimen/dp_12"
                app:topStartRadius="@dimen/dp_12" />

            <com.nvqquy98.moneyqq.presentation.ui.customview.layout.FormEntryAppV3
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_478"
                android:layout_marginTop="-36dp"
                app:arrow="both"
                app:arrowSize="@dimen/dp_36"
                app:backgroundFill="@color/white"
                app:blurShadow="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text1"
                app:shadowColor="#0D000000" />

            <com.nvqquy98.moneyqq.presentation.ui.customview.layout.FormEntryAppV3
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_478"
                android:layout_marginTop="-36dp"
                app:arrow="top"
                app:arrowSize="@dimen/dp_36"
                app:backgroundFill="@color/white"
                app:blurShadow="@dimen/dp_12"
                app:bottomEndRadius="@dimen/dp_12"
                app:bottomStartRadius="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text2"
                app:shadowColor="#0D000000" />

            <com.nvqquy98.moneyqq.presentation.ui.customview.layout.FormEntryAppV3
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_478"
                android:layout_marginTop="56dp"
                app:backgroundFill="@color/white"
                app:blurShadow="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text"
                app:shadowColor="@color/test"
                app:startRadius="@dimen/dp_24" />
        </LinearLayout>
    </ScrollView>
</layout>